<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="16dp"
    android:paddingRight="16dp"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="10dp">

        <TextView
            android:id="@+id/report"
            android:textColor="@color/control_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="NUMBER OF PICTURES: "
            android:textAlignment="center"/>


        <TextView
            android:id="@+id/picturesTaken"
            android:textColor="@color/control_background"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textAlignment="center"/>

    </LinearLayout>


    <TextView
        android:id="@+id/galleryNameTextView"
        android:textColor="@color/control_background"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="7dp"
/>

    <GridView
        android:id="@+id/gridViewGallery"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="80"
        android:clipToPadding="false"
        android:padding="16dp"
        android:horizontalSpacing="10dp"
        android:verticalSpacing="10dp"
        android:numColumns="7"
        android:background="@color/control_background"

        >

    </GridView>

    <Space
        android:layout_width="wrap_content"
        android:layout_height="5dp" />
    
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete, save, or make video from pictures"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/deleteSelectedItemsButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/icon_delete"
            android:backgroundTint="@color/control_background"/>

        <ImageButton
            android:id="@+id/savePhotos"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/icon_save"
            android:backgroundTint="@color/control_background"/>

        <ImageButton
            android:id="@+id/makeVideo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:src="@drawable/icon_video"
            android:backgroundTint="@color/control_background"/>

    </LinearLayout>

    <TextView
        android:id="@+id/progressInfoTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <ProgressBar
        android:id="@+id/progress"
        android:visibility="invisible"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />





</LinearLayout>